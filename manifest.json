{
    "manifest_version": 3,
    "name": "truly search",
    "version": "1.0.2",
    "description": "Truly search engine.",
    "chrome_settings_overrides": {
        "search_provider": {
            "encoding": "UTF-8",
            "favicon_url": "https://cheese-233.github.io/truly/favicon.ico",
            "is_default": true,
            "keyword": "truly.eu.org",
            "name": "truly",
            "search_url": "https://search.truly.eu.org/search?q={searchTerms}"
        }
    },
    "homepage_url": "https://cheese-233.github.io/truly",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "favicon.ico"
    },
    "action": {
        "default_icon": {
            "64": "favicon.ico",
            "128": "favicon.ico"
        }
    },
    "host_permissions": [
        "*://*.baidu.com/*",
        "*://*.google.com/*",
        "*://*.bing.com/*",
        "*://*.so.com/*"
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "omnibox": {
        "keyword": "truly"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}